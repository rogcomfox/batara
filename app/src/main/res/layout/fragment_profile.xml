<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueaccent_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/foto_profil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/foto_profil" />

            <Button
                android:id="@+id/btn_add_event"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/foto_profil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_blue"
                android:elevation="4dp"
                android:fontFamily="@font/nunito"
                android:text="Edit Profil"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/name_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_add_event"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Nama"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_profile"
                android:layout_marginLeft="38dp"
                android:fontFamily="@font/nunito"
                android:text="Syahshiyah Rohidah"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/edt_profil"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/line5"
                android:layout_alignRight="@id/Password"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/ic_baseline_edit_24" />

            <View
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/email_profile"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="31dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Username"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginLeft="38dp"
                android:fontFamily="@font/nunito"
                android:text="sasirhd"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/tvUsername"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="31dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Email"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginLeft="38dp"
                android:fontFamily="@font/nunito"
                android:text="syahshiyahr@gmail.com"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/tvEmail"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="31dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/nomerTelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line4"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="No. Telepon"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvNoTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomerTelepon"
                android:layout_marginLeft="38dp"
                android:fontFamily="@font/nunito"
                android:text="08123456239"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/line5"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/tvNoTelp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="31dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line5"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Password"
                android:textColor="@android:color/black" />


            <View
                android:id="@+id/line6"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/Password"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="31dp"
                android:background="@android:color/black" />


            <TextView
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line6"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Log Out"
                android:textColor="#FA7373" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>